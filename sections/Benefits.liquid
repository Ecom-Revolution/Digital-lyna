<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
  
  .section-pc-{{ section.id }} {
    margin-top: {{ layout_margin_top }}px;
    margin-bottom: {{ layout_margin_bottom }}px;
  }
  
  .section-pc-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: 27px;
    padding-bottom: 27px;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .feature-heading-pc-{{ section.id }} {
    text-align: {{ heading_position_mobile }};
  }

  .feature-heading-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    font-weight: {{ heading_weight }};
    font-family: {{ heading_font.family }}{% if heading_weight.fallback_families != blank %},{{ heading_font.fallback_families }}{% endif %} !important;
    line-height: 150%;
    font-style: {{ heading_style }};
    text-transform: unset;
    text-decoration: none;
  }

  .feature-slider-pc-{{ section.id }} {
    margin-top: 28px !important;
    margin-left: -1.5rem !important;
    padding-left: 1.5rem !important;
    margin-right: -1.5rem !important;
    padding-right: 1.5rem !important;
  }

  .feature-slide-pc-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: {{ card_background }};
    border-radius: {{ card_border_radius }}px;
    border: {{ card_border_width }}px {{ card_border_style }} {{ card_border_color }};
    overflow: hidden;
  }

  .feature-image-pc-{{ section.id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: {{ card_border_radius }}px {{ card_border_radius }}px 0px 0px;
  }

  .feature-image-pc-{{ section.id }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.1);
    z-index: 1;
  }

  .feature-image-pc-{{ section.id }} img,
  .feature-image-pc-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: none;
    border: 0px;
  }

  .feature-image-pc-{{ section.id }} svg {
    background-color: #AFAFAF;
  }  

  .feature-percent-content-pc-{{ section.id }} {
    position: absolute;
    bottom: 24px;
    left: 16px;
    width: calc(100% - 32px);
    display: flex;
    flex-direction: column;
    z-index: 2;
  }

  .feature-circle-container-pc-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: start;
  } 

  .feature-circle-pc-{{ section.id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .feature-circle-container-pc-{{ section.id }} svg {
    width: 72px;
    height: 72px;
  }

  .feature-circle-container-pc-{{ section.id }} span {
    font-size: 18px;
    color: {{ card_circle_heading_color }};
    line-height: 100%;
    position: absolute;
  }

  .feature-percent-text-pc-{{ section.id }} {
    display: block;
    word-wrap: break-word;
    margin-top: 10px;
    text-align: left;
  }

  .feature-percent-text-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ card_circle_heading_size_mobile }}px;
    color: {{ card_circle_heading_color }};
    font-weight: {{ card_circle_heading_weight }};
    font-family: {{ card_circle_heading_font.family }}{% if card_circle_heading_font.fallback_families != blank %}, {{ card_circle_heading_font.fallback_families }} {% endif %};
    font-style: {{ card_circle_heading_style }};
    line-height: 150%;
    text-transform: unset;
  }

  .feature-slide-content-pc-{{ section.id }} {
    padding: 24px 16px;
  }

  .feature-title-pc-{{ section.id }} {
    display: block;
    word-wrap: break-word;
    text-align: left;
  }

  .feature-title-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ card_heading_size_mobile }}px;
    color: {{ card_heading_color }};
    font-weight: {{ card_heading_weight }};
    font-style: {{ card_heading_style }};
    font-family: {{ card_heading_font.family }}{% if card_heading_font.fallback_families != blank %}, {{ card_heading_font.fallback_families }} {% endif %} !important;
    line-height: 150%;
    text-transform: unset;
  }

  .feature-text-pc-{{ section.id }} {
    display: block;
    word-wrap: break-word;
    text-align: left;
    margin-top: 10px;
  }

  .feature-text-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ card_content_size_mobile }}px;
    color: {{ card_content_color }};
    font-style: {{ card_content_style }};
    font-weight: {{ card_content_weight }};
    font-family: {{ card_content_font.family }}{% if card_content_font.fallback_families != blank %}, {{ card_content_font.fallback_families }}{% endif %} !important ;
    line-height: 170%;
    text-transform: unset;
  }

  .feature-navigation-container-pc-{{ section.id }} {
    justify-content: center;       
    margin-top: 24px;
  }

  .feature-navigation-pc-{{ section.id }} {    
    display: flex;
    align-items: center;
    gap: 6px;    
    background-color: {{ card_background }};
    border-radius: 100px;
    padding: 6px 16px;
  }  

  .feature-btn-prev-pc-{{ section.id }},
  .feature-btn-next-pc-{{ section.id }}{
    display: flex !important;
    flex-direction: column;
    align-items: center;
    width: 56px;
    cursor: pointer;
    border: none;
    background-color: transparent;
    flex-shrink: 0;
  }

  .feature-btn-prev-pc-{{ section.id }} {
     transform: rotate(180deg);
  }

  .feature-btn-next-pc-{{ section.id }} svg,
  .feature-btn-prev-pc-{{ section.id }} svg {
    display: block;    
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;  
  }

  .feature-btn-prev-pc-{{ section.id }} path,
  .feature-btn-next-pc-{{ section.id }} path {
    fill: #171717;
    transition: all 0.25s ease 0s;
  }

  .feature-btn-prev-pc-{{ section.id }}:hover path,
  .feature-btn-next-pc-{{ section.id }}:hover path {
    fill: #ababab;
  }

  .feature-btn-prev-pc-{{ section.id }}.swiper-button-disabled,
  .feature-btn-next-pc-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }
 
  .feature-pagination-pc-{{ section.id }} {
    position: static !important;
    display: block;
    word-wrap: break-word;
    white-space: nowrap;
    margin: 0;
    font-size: 12px;
    color: #171717 !important;
    line-height: 100%;
    text-transform: unset;
  }

  .feature-btn-container-pc-{{ section.id }} {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .feature-button-pc-{{ section.id }} {
    display: flex;
    align-items: center;
    max-width: fit-content;
    justify-content: center;
    gap: 10px;
    margin: 0;
    margin-top: 16px;
    font-size: 14px;
    color: #171717;
    line-height: 100%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: 14px 32px;
    border-radius: 100px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }
  

  .feature-button-inner-pc-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .feature-button-pc-{{ section.id }}:hover {
    color: #171717;
    transition: all 0.25s ease 0s;
  }

  .feature-button-pc-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .feature-button-pc-{{ section.id }} svg path {
    fill: #171717;
    transition: all 0.25s ease 0s;
  }

  .feature-button-pc-{{ section.id }}:hover svg path {
    fill: #171717;
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-pc-{{ section.id }} {
      margin-top: {{ layout_margin_top }}px;
      margin-bottom: {{ layout_margin_bottom }}px;
      margin-left: 0rem;
      margin-right: 0rem;
      border-radius: 0px;
    }
    
    .section-pc-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: 36px;
      padding-bottom: 36px;
      padding-left: 2rem;
      padding-right: 2rem;
    }    

    .feature-heading-pc-{{ section.id }} {
      text-align: {{ heading_position }};
    }
  
    .feature-heading-pc-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .feature-slider-pc-{{ section.id }} {
      margin-top: 28px;
      margin-left: 0rem !important;
      padding-left: 0rem !important;
      margin-right: 0rem !important;
      padding-right: 0rem !important;
    }

    .feature-percent-content-pc-{{ section.id }} {
      bottom: 24px;
      left: 20px;
      width: calc(100% - 40px)
    }

    .feature-circle-container-pc-{{ section.id }} {
      justify-content: start;
    } 

    .feature-circle-container-pc-{{ section.id }} svg {
      width: 72px;
      height: 72px;
    }

    .feature-circle-container-pc-{{ section.id }} span {
      font-size: 18px;
    }

    .feature-percent-text-pc-{{ section.id }} {
      margin-top: 10px;
      text-align: left;
    }

    .feature-percent-text-pc-{{ section.id }} * {      
      font-size: {{ card_circle_heading_size }}px !important;
    }

    .feature-slide-content-pc-{{ section.id }} {
      padding: 24px 20px;
    }

    .feature-title-pc-{{ section.id }} {
      text-align: left;
    }

    .feature-title-pc-{{ section.id }} * {
      font-size: {{ card_heading_size }}px;
    }

    .feature-text-pc-{{ section.id }} {
      text-align: left;
      margin-top: 12px;
    }

    .feature-text-pc-{{ section.id }} * {
      font-size: {{ card_content_size }}px;
    }

    .feature-navigation-container-pc-{{ section.id }} {   
      margin-top: 24px;
    }

    .feature-navigation-pc-{{ section.id }} {    
      gap: 6px;    
      padding: 6px 16px;
    }  

    .feature-pagination-pc-{{ section.id }} {
      font-size: 12px;
    }

    .feature-btn-next-pc-{{ section.id }},
    .feature-btn-prev-pc-{{ section.id }} {
      width: 50px;
    }

    .feature-btn-container-pc-{{ section.id }} {
      width: 100%;
      display: flex;
      justify-content: center;
    }

    .feature-button-pc-{{ section.id }} {
      margin-top: 20px;
      padding: 14px 32px;
      font-size: 14px;
    }

  }</style>
