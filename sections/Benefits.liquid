        },
        {
            "type": "color",
            "id": "heading_color",
            "label": "Heading Color",
            "default": "#171717"
        },
        {
            "type": "select",
            "id": "heading_style",
            "label": "Heading Style",
            "options": [
                {
                    "value": "normal",
                    "label": "Normal"
                },
                {
                    "value": "italic",
                    "label": "Italic"
                }
            ],
            "default": "normal"
        },
        {
            "type": "select",
            "id": "heading_position",
            "label": "Heading Position",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left"
        },
        {
            "type": "select",
            "id": "heading_position_mobile",
            "label": "Heading Position Mobile",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
