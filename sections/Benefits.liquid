<div class="section-pc-{{ section.id }} feature-pc-{{ section.id }}" style="background-color: {{ layout_background }}; background-image: ;">
    <div class="section-pc-{{ section.id }}-settings">
      {% if heading != blank %}
        <div class="feature-heading-pc-{{ section.id }}">
          <h2>{{ heading }}</h2>
        </div>
      {% endif %}
            
      <div class="swiper feature-slider-pc-{{ section.id }} ">
        <div class="swiper-wrapper"  >
          {% for block in section.blocks %}
            <div class="swiper-slide feature-slide-pc-{{ section.id }}" >
              <div class="feature-image-pc-{{ section.id }}">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
                {% else %}
                  {{ 'product-2' |  placeholder_svg_tag: 'placeholder_svg' }}
                {% endif %}
                <div class="feature-percent-content-pc-{{ section.id }}">
                  
                    <div class="feature-circle-container-pc-{{ section.id }}">
                      <div class="feature-circle-pc-{{ section.id }}" data-percent="{{ block.settings.percentage }}">
                        <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: transparent;">
                          <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ card_circle_color }}" stroke-width="2" stroke-dasharray="{{ block.settings.percentage }}, 100"></path>
                        </svg><span>{{ block.settings.percentage }}%</span>
                      </div>
                    </div>                     
                  
                   
                    <div class="feature-percent-text-pc-{{ section.id }}">
                      <p>{{block.settings.circle_heading}}</p>
                    </div>
                                    
                </div>                
              </div>               
              <div class="feature-slide-content-pc-{{ section.id }}">
                
                  <div class="feature-title-pc-{{ section.id }}">
                    <p>{{ block.settings.heading}}</p>
                  </div>
                
                
                  <div class="feature-text-pc-{{ section.id }}">
                    {{ block.settings.content }}
                  </div>  
                
                
                
              </div>
            </div>
          {% endfor %}
          
          
        </div>
      
        <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span></div>
      {% if enable_navigation == true %}
      <div class="feature-navigation-container-pc-{{ section.id }}">
        <div class="feature-navigation-pc-{{ section.id }}">
          <button class="feature-btn-prev-pc-{{ section.id }}">
            <svg id="Layer_1" enable-background="new 0 0 100 100" height="512" viewBox="0 0 100 100" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m81.115 45.133-.997 1.734 3.541 2.035-71.04-.001v2l71.491.001-3.761 2.557 1.125 1.654 7.79-5.297z"></path></svg>
          </button>
          <div class="feature-pagination-pc-{{ section.id }} swiper-pagination swiper-pagination-fraction swiper-pagination-horizontal"><span class="swiper-pagination-current">2</span> <span>of</span> <span class="swiper-pagination-total">4</span></div>
          <button class="feature-btn-next-pc-{{ section.id }}" tabindex="0" aria-label="Next slide" aria-controls="swiper-wrapper-1135a6be732762810" aria-disabled="false">
            <svg id="Layer_1" enable-background="new 0 0 100 100" height="512" viewBox="0 0 100 100" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m81.115 45.133-.997 1.734 3.541 2.035-71.04-.001v2l71.491.001-3.761 2.557 1.125 1.654 7.79-5.297z"></path></svg>
          </button>
        </div> 
      </div>   
    {% endif %}            
         
    </div>
</div>

