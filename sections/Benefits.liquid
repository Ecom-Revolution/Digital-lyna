            "options": [
                {
                    "value": "normal",
                    "label": "Normal"
                },
                {
                    "value": "bold", 
                    "label": "Bold"
                }
            ],
            "default": "normal"
        },
        {
            "type": "font_picker",
            "id": "heading_font",
            "label": "Heading Font",
