<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
  .section-pc-{{section.id}} {
    border-top: solid #000000 0px;
    border-bottom: solid #000000 0px;
    margin-top: {{ layout_margin_top }}px;
    margin-bottom: {{ layout_margin_bottom }}px;
    margin-left: auto;
    margin-right: auto;
    border-radius: 0px;
    overflow: hidden;
    
  }

  .section-pc-{{section.id}}-settings {
    margin: 0 auto;
    padding-top: 27px;
    padding-bottom: 27px;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    {% if layout_enable_max_width == true %}

      max-width: 100%;
      {% else %}
      max-width: 1400px;
      {% endif %}
  }

  .testimonials-heading-pc-{{section.id}} {
    text-align: center;
  }

  .testimonials-heading-pc-{{section.id}} * {
    margin: 0;
    font-weight: {{ heading_weight_mobile}};
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
    line-height: 130%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-text-pc-{{section.id}} {
    text-align: center;
    margin-top: 16px;
  }

  .testimonials-text-pc-{{section.id}} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
    font-weight: {{ text_weight_mobile }};
    line-height: 150%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-slider-body-pc-{{section.id}} {
    display: flex;
    margin-top: 40px;
    align-items: center;
    gap: 15px;
  }

  .testimonials-slider-pc-{{section.id}} {
    flex: 1 1 0 !important;
    margin-left: -1.5rem !important;
    margin-right: -1.5rem !important;
    padding-left: 1.5rem !important;
    padding-right: 1.5rem !important;
  }

  .testimonials-slider-pc-{{section.id}} .swiper-wrapper {
    align-items: stretch !important;
  }

  .testimonials-slide-pc-{{section.id}} {
    box-sizing: border-box !important;
    overflow: hidden !important;
    border: {{ slide_border_size }}px {{ slide_border_style }} {{ slide_border_color }};
    border-radius: {{ slide_border_radius }}px;
    background-color: {{ slide_bg_color }};
    height: auto !important;
  }

  .testimonials-image-pc-{{section.id}} img,
  .testimonials-image-pc-{{section.id}} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-image-pc-{{section.id}} svg {
    background-color: transparent ;
  }

  .testimonials-content-pc-{{section.id}} {
    display: flex;
    flex-direction: column;
    align-items: start;
    padding: 30px 18px;
  }

  .testimonials-author-pc-{{section.id}} {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .testimonials-author-inner-pc-{{section.id}} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .testimonials-author-image-pc-{{section.id}} {
    flex-shrink: 0;
    width: 36px;
    border-radius: 100px;
    overflow: hidden;
    aspect-ratio: 1/1;
  }

  .testimonials-author-image-pc-{{section.id}} img,
  .testimonials-author-image-pc-{{section.id}} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-author-image-pc-{{section.id}} svg {
    background-color: #AFAFAF;
  }

  .testimonials-author-name-pc-{{section.id}} {
    margin: 0;
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    font-weight: {{ author_weight_mobile }};
    font-family: {{ author_font.family }}, {{ author_font.fallback_families }} ;
    line-height: 130%;
    text-transform: unset;
    word-wrap: break-word;
  }

  .testimonials-author-job-title-pc-{{section.id}} {
    margin: 0;
    font-size: {{ job_title_size_mobile }}px;
    color: {{ job_title_color }};
    font-weight: {{ job_title_weight }};
    font-family: {{ job_title_font.family }}, {{ job_title_font.fallback_families }};
    line-height: 150%;
    text-transform: unset;
    word-wrap: break-word;
  }

  .testimonials-social-icon-pc-{{section.id}} {
    width: {{ social_icon_size_mobile }}px;
    height: {{ social_icon_size_mobile }}px;
  }

  .testimonials-social-icon-pc-{{section.id}} img,
  .testimonials-social-icon-pc-{{section.id}} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-social-icon-pc-{{section.id}} svg path {
    fill: {{ social_icon_color  }};
  }

  .testimonials-slide-text-pc-{{section.id}} {
    margin-top: 24px;
    text-align: left;
  }

  .testimonials-slide-text-pc-{{section.id}} * {
    margin: 0;
    font-size: {{ slide_content_size_mobile }}px;
    color: {{ slide_content_color }};
    font-weight: {{ slide_content_weight_mobile }};
    font-family: {{ slide_content_font.family }}, {{ slide_content_font.fallback_family }};
    line-height: 150%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-button-pc-{{section.id}} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    gap: 10px;
    width: 100%;
    margin: 0;
    margin-top: 16px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: 100%;
    text-align: center;
    text-transform: unset;
    {% if enable_button_underline == false %}
    text-decoration: none;
    {% else %}
    text-decoration: underline;
    {% endif %}
    padding: 10px 16px;
    border-radius: {{ button_border_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: {{ button_bg_color }};
    border: {{ button_border_size }}px {{ button_border_style }} {{ button_border_color }};
    cursor: pointer;
  }

  .testimonials-button-inner-pc-{{section.id}} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .testimonials-button-pc-{{section.id}}:hover {
    /* color: #303030; */
    transition: all 0.25s ease 0s;
  }

  .testimonials-button-pc-{{section.id}} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-btn-prev-pc-{{section.id}},
  .testimonials-btn-next-pc-{{section.id}} {
    display: flex;
    flex-shrink: 0;
    width: 38px;
    height: 38px;
    border: 0px;
    border-radius: 100px;
    background: transparent;
    background: {{ slide_global_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    /* box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15); */
  }

  .testimonials-btn-prev-pc-{{section.id}} .animate-icon,
  .testimonials-btn-next-pc-{{section.id}} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .testimonials-btn-prev-pc-{{section.id}} .animate-icon:before,
  .testimonials-btn-next-pc-{{section.id}} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: 8px;
    height: 8px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .testimonials-btn-prev-pc-{{section.id}} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .testimonials-btn-prev-pc-{{section.id}} .animate-icon:after,
  .testimonials-btn-next-pc-{{section.id}} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: 7.7px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .testimonials-btn-prev-pc-{{section.id}} span,
  .testimonials-btn-next-pc-{{section.id}} span {
    color: {{ button_bg_color}};
  }

  .testimonials-btn-prev-pc-{{section.id}}.swiper-button-disabled,
  .testimonials-btn-next-pc-{{section.id}}.swiper-button-disabled {
    opacity: 0.5;
  }

  .testimonials-btn-prev-pc-{{section.id}}.swiper-button-lock,
  .testimonials-btn-next-pc-{{section.id}}.swiper-button-lock {
    opacity: 0;
    pointer-events: none;
  }

  .testimonials-pagination-pc-{{section.id}} {
    position: static !important;
    margin: 0px auto !important;
    margin-top: 24px !important;
    width: 100% !important;
    max-width: fit-content;
    justify-content: center;
    align-items: center;
  }

  .testimonials-pagination-pc-{{section.id}} .swiper-pagination-bullet {
    width: 8px !important;
    height: 8px !important;
    border: 0px !important;
    background-color: {{ slide_global_color }} !important;
    opacity: 0.4 !important;
    transition: all 0.25s ease 0s;
  }

  .testimonials-pagination-pc-{{section.id}} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    transform: scale(1.3) !important;
    opacity: 1 !important;
    transition: all 0.25s ease 0s;
  }

  @media(min-width: 1024px) {

    .section-pc-{{section.id}} {
      margin-top: {{ layout_margin_top }}px;
      margin-bottom: {{ layout_margin_bottom }}px;
      margin-left: auto;
      margin-right: auto;
      border-radius: 0px;
    }

    .section-pc-{{section.id}}-settings {
      padding: 0 5rem;
