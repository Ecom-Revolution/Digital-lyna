      padding-left: 5rem;
      padding-right: 5rem;
    }

    .testimonials-heading-pc-{{section.id}} {
      text-align: center;
    }

    .testimonials-heading-pc-{{section.id}} * {
      font-size: {{ heading_size }}px;
      font-weight: {{ heading_weight }};
    }

    .testimonials-text-pc-{{section.id}} {
      text-align: center;
      margin-top: 24px;
    }

    .testimonials-text-pc-{{section.id}} * {
      font-size: {{ text_size }}px;
      font-weight: {{ text_weight }};
    }

    .testimonials-slider-body-pc-{{section.id}} {
      margin-top: 72px;
    }

    .testimonials-slider-pc-{{section.id}} {
      margin-left: -0rem !important;
      margin-right: -0rem !important;
    }

    .testimonials-content-pc-{{section.id}} {
      align-items: start;
      padding: 40px 24px;
    }

    .testimonials-author-image-pc-{{section.id}} {
      width: 48px;
    }

    .testimonials-author-name-pc-{{section.id}} {
      font-size: {{ author_size }}px;
