  <div class="section-pc-{{section.id}}-settings">
    {% if heading %}
    <div class="testimonials-heading-pc-{{section.id}}">
      <h2> {{ heading }}</h2>
    </div>
    {% endif %}

    {% if text %}
    <div class="testimonials-text-pc-{{section.id}}">
      <p>{{ text }}</p>
    </div>
    {% endif %}

    <div class="testimonials-slider-body-pc-{{section.id}}">
      {% if show_navigation == true %}
      <button
        class="testimonials-btn-prev-pc-{{section.id}} "
        
      >
        <span class="animate-icon"></span>
      </button>
  {% endif %}
      <div class="testimonials-slider-pc-{{section.id}} swiper">
        <div
          class="swiper-wrapper"
          >
          {% for block in section.blocks %}
          <div
            class="testimonials-slide-pc-{{section.id}} swiper-slide "
            
          >
            <div class="testimonials-image-pc-{{section.id}}">
              {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt=""
                loading="lazy"
              >
              {% else %}
              {{ 'product-1' |  placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="testimonials-content-pc-{{section.id}}">
              <div class="testimonials-author-pc-{{section.id}}">
                <div class="testimonials-author-inner-pc-{{section.id}}">
                  <div class="testimonials-author-image-pc-{{section.id}}">
                    {% if block.settings.author_image != blank %}
                    <img
                      src="{{ block.settings.author_image | img_url: 'master' }}"
                      alt=""
                      loading="lazy"
                    >
                    {% else %}
                    {{ 'product-1' |  placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="testimonials-author-content-pc-{{section.id}}">
                  {% if block.settings.author_name %}
                  <p class="testimonials-author-name-pc-{{section.id}}">{{ block.settings.author_name }}</p>
                  {% endif %}
                  {% if block.settings.author_job_title %}
                  <p class="testimonials-author-job-title-pc-{{section.id}}">{{ block.settings.author_job_title }}</p>
                  {% endif %}
                  </div>
                </div>

                <div class="testimonials-social-icon-pc-{{section.id}}">
                  {% if block.settings.social_icon == 'tiktok' %}
                    <img src="https://cdn.shopify.com/s/files/1/0850/7673/8376/files/tik-tok.svg?v=1731484202" alt="" loading="lazy">
                  {% elsif block.settings.social_icon == 'instagram' %}  
                    <img src="https://cdn.shopify.com/s/files/1/0850/7673/8376/files/instagram.svg?v=1731233933" alt="" loading="lazy"> 
                  {% elsif block.settings.social_icon == 'youtube' %}
                    <img src="https://cdn.shopify.com/s/files/1/0850/7673/8376/files/youtube.svg?v=1731484194" alt="" loading="lazy"> 
                  {% elsif block.settings.social_icon == 'twitter' %}  
                    <img src="https://cdn.shopify.com/s/files/1/0850/7673/8376/files/X_logo_2023_original.svg?v=1731484281" alt="" loading="lazy"> 
                  {% endif %}  
                </div>
              </div>

              <div class="testimonials-slide-text-pc-{{section.id}}">
                <p>
                  {{ block.settings.content }}
                </p>
              </div>

              <a href="{{ block.settings.button_url }}" class="testimonials-button-pc-{{section.id}}">
                <p class="testimonials-button-inner-pc-{{section.id}}">{{ block.settings.button_text}}</p>
              </a>
            </div>
          </div>
          {% endfor %}
        </div>
        
