      let timerstext_yWRPne = document.querySelectorAll('.countdown-timer-text_yWRPne');
      timerstext_yWRPne.forEach(el => {
        const second = 1000,
          minute = second * 60,
          hour = minute * 60,
          day = hour * 24,
          wrapper = el,
          countDown = new Date('--T::00Z').getTime();

        console.log('start timer, end date:' + countDown)
        const interval = setInterval(function () {
          let now = new Date().getTime(),
            distance = countDown - now,
            days = Math.floor(distance / day),
            hours = Math.floor((distance % day) / hour),
            minutes = Math.floor((distance % hour) / minute),
            seconds = Math.floor((distance % minute) / second);

          (wrapper.querySelector('.js-timer-days-text_yWRPne').innerText = (
            days
          )),
            (wrapper.querySelector('.js-timer-hours-text_yWRPne').innerText = (
              hours
            )),
            (wrapper.querySelector('.js-timer-minutes-text_yWRPne').innerText = (
              minutes
            )),
            (wrapper.querySelector('.js-timer-seconds-text_yWRPne').innerText = (
              seconds
            ));

          if (distance < 0) {
            wrapper.querySelector('.js-timer-days-text_yWRPne').innerText = '00';
            wrapper.querySelector('.js-timer-hours'-text_yWRPne).innerText = '00';
            wrapper.querySelector('.js-timer-minutes-text_yWRPne').innerText = '00';
            wrapper.querySelector('.js-timer-seconds-text_yWRPne').innerText = '00';

            document.querySelector(
              '.countdown-timer-completed-text-text_yWRPne'
            ).style.display = 'block';

            clearInterval(interval);
          }

        }, second);
        document.addEventListener('shopify:section:unload', function (event) {
          if (event.detail.sectionId === 'pc-{{section.id}}') clearInterval(interval);
        });
      })

      let timerstimer_ywjraz = document.querySelectorAll('.countdown-timer-timer_ywjraz');
      timerstimer_ywjraz.forEach(el => {
        const second = 1000,
          minute = second * 60,
          hour = minute * 60,
          day = hour * 24,
          wrapper = el,
          countDown = new Date('{{ timer_days }}T{{ timer_hours }}:{{ timer_minutes }}:{{ timer_seconds }}Z').getTime();

        console.log('start timer, end date:' + countDown)
        const interval = setInterval(function () {
